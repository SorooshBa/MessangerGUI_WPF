<UserControl x:Class="ChatRoomStoryTeller.ChatImageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatRoomStoryTeller"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="350">
    <Border  x:Name="brdr" Background="#7289da" BorderThickness="1,1,1,1" CornerRadius="25">
        <Grid>
            <Border Margin="20,5,20,30" CornerRadius="20" Width="320"  >
                <Border.Background>
                    <ImageBrush x:Name="imgl" ImageSource="profile.jpg" Stretch="UniformToFill"  />

                </Border.Background>
            </Border>
            <Label Margin="0,0,10,0" Foreground="White" Content="10:51" x:Name="lblTime" HorizontalAlignment="Right" FontSize="15" VerticalAlignment="Bottom"/>
        </Grid>
    </Border>
</UserControl>
